\mode<presentation>

% Logo - Monash Uni and Monash Business School combined
\pgfdeclareimage[width=35ex,interpolate=false]{monbs}{monash/uniandbs}%
\titlegraphic{\pgfuseimage{monbs}}%

% Colours 
\setbeamercolor{section in head/foot}{parent=palette primary}
\setbeamercolor{subsection in head/foot}{parent=palette secondary}

\setbeamercolor{author in head/foot}{parent=footerfont}
\setbeamercolor{title in head/foot}{parent=subsection in head/foot}

\setbeamercolor{date in head/foot}{parent=footerfont}

\setbeamercolor{frametitle}{parent=section in head/foot}
\setbeamercolor{frametitle right}{parent=palette primary}

% Frame Title
\setbeamertemplate{frametitle}{%
    \nointerlineskip%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1ex]{frametitle}
        \hspace*{1ex}\insertframetitle%
    \end{beamercolorbox}%
}

% Footer
\defbeamertemplate*{footline}{infolines theme}
{%
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=\paperwidth,ht=2.2ex,dp=0.7ex,leftskip=2ex,rightskip=2ex,sep=0pt]{footer}%
    \hfill%
    \usebeamercolor[fg]{footerfont}%
    \usebeamerfont{footerfont}%
    \insertshorttitle%
    \hfill%
    \usebeamercolor[fg]{footerfont}%
    \usebeamerfont{footerfont}%
    \usebeamertemplate{footerfont}%
    \insertpagenumber
  \end{beamercolorbox}}%
  \vskip0pt%
}


