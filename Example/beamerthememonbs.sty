\ProvidesPackage{beamerthememonbs}[2022/06/03]

\mode<presentation>



% Load the subthemes
\useinnertheme{monbs}
\useoutertheme{monbs}
\usecolortheme{monbs}

% Font package
\usefonttheme{professionalfonts}
\usepackage{fourier}
\usepackage[sfdefault]{noto}

% Extra packages
\usepackage[font=scriptsize,labelfont=bf]{caption}
\usepackage[english]{babel}
\usepackage{csquotes}
\usepackage[backend=biber,style=apa,doi=false,annotation=false]{biblatex}
\usepackage{booktabs}
\usepackage[normalem]{ulem} % strikethrough text

% Fonts
\setbeamerfont{title}{series=\mdseries}
\setbeamerfont{subtitle}{series=\mdseries}
\setbeamerfont{author}{size=\small}
\setbeamerfont{date}{size=\footnotesize}
\setbeamerfont{institute}{size=\footnotesize}
\setbeamerfont{frametitle}{size=\Large}
\setbeamerfont{framesubtitle}{size=\normalsize}
\setbeamerfont{pagenumber}{size=\tiny,series=\bfseries}


\setbeamercolor{titlelike}{fg=monashblue,bg=white}

% Turn off navigation symbols
\setbeamertemplate{navigation symbols}{}


% Reduce whitespace beneath equations
\g@addto@macro\normalsize{%
    \setlength\belowdisplayskip{3pt}
    \setlength\abovedisplayskip{3pt}
}

% Number the figures
\setbeamertemplate{caption}[numbered]

% set the text to be transparent when pausing
%\setbeamercovered{transparent}

% script size bibliography
\AtBeginBibliography{\scriptsize}

% citations no comma in between --> make it neater 
\renewcommand{\nameyeardelim}{\space}
\renewcommand{\postnotedelim}{\space}


% NEW COMMANDS. -----------------------------------------------------------------
\newcommand{\red}{\textcolor{red}} % command for red text
\newcommand*\diff{\mathop{}\!\mathrm{d}} % `d` in differentials 


% SET MARGINS. -----------------------------------------------------------------
\setbeamersize{text margin left=0.75cm, text margin right=0.75cm}
\setlength{\leftmargini}{0.75cm}

\mode<all>
